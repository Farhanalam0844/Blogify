<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>
<title>Homepage</title>

<body>
    <%- include("./partials/nav") %>

    <% if (locals.blogs) { %>
    <div class="container mt-4">
        <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
            <div class="col m-2">
                <div class="card m-5" style="width: 18rem;">
                    <img src="/uploads/<%= blog.coverImage %>" class="card-img-top" alt="...">
                    <!-- <img src="default.png" class="card-img-top" alt="..."> -->
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <% } %>

 

    <%- include("./partials/scripts") %>
</body>

</html>
